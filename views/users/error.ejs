<% layout('layouts/boilerplate') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="alert alert-danger border border-danger shadow-sm rounded-4 p-4">
        <h3 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Oops! An Error Occurred</h3>
        <hr>
        <p class="mb-2"><strong>Error Details:</strong></p>
        <p class="mb-0"><%= err.message || "An unexpected error occurred while processing your request." %></p>
      </div>

      <div class="text-center mt-4">
        <a href="/listings" class="btn btn-outline-danger px-4 rounded-pill">
          <i class="bi bi-arrow-left-circle me-2"></i>Back to Listings
        </a>
      </div>
    </div>
  </div>
</div>