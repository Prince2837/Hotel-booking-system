<% layout('layouts/boilerplate') %>

<style>
  .signup-card {
    max-width: 450px;
    margin: 4rem auto;
    padding: 2rem;
    border: 1px solid #dee2e6;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
    background-color: #ffffff;
  }

  .form-label {
    font-weight: 500;
  }

  .btn-signup {
    background-color: #FF5A5F; /* Airbnb primary red */
    color: white;
    border: none;
  }

  .btn-signup:hover {
    background-color: #e0484d;
  }

  .flash-message {
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    border-radius: 6px;
    font-size: 0.95rem;
  }

  .flash-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }

  .flash-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }

.flash-link {
  /* color: #FF5A5F; */
 color: #f23b41;
  font-weight: 500;
  text-decoration: underline;
}

  .signup-link {
    margin-top: 1rem;
    text-align: center;
    font-size: 0.9rem;
  }

  .signup-link a {
    color: #FF5A5F;
    text-decoration: none;
  }

  .signup-link a:hover {
    text-decoration: underline;
  }
</style>

<div class="signup-card">
  <h2 class="text-center mb-4">Log In</h2>

