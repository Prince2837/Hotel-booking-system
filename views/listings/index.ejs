<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
  .listing-card {
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .listing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  }

  .card-img-top {
    height: 220px;
    object-fit: cover;
  }

  .card-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #FF5A5F;
  }

  .btn-view {
    background-color: #FF5A5F;
    border: none;
    color: white;
    font-weight: 500;
    font-size: 0.875rem;
    padding: 0.4rem 0.9rem;
    border-radius: 8px;
  }

  .btn-view:hover {
    background-color: #e0484d;
  }

  .category-scroll-wrapper {
    position: relative;
    margin: 2rem 0;
  }

  .category-bar {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 0.5rem 3.5rem;
    scrollbar-width: none;
  }

  .category-bar::-webkit-scrollbar {
    display: none;
  }

  .category-item {
    flex-shrink: 0;
    white-space: nowrap;
    background-color: #f2f2f2;
    padding: 0.6rem 1.2rem;
    border-radius: 30px;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    color: #333;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .category-item.active,
  .category-item:hover {
    background-color: #FF5A5F;
    color: white;
  }

  .scroll-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: white;
    border: 1px solid #ccc;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    z-index: 10;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .scroll-arrow:hover {
    background-color: #f7f7f7;
  }

  .scroll-left {
    left: 10px;
  }

  .scroll-right {
    right: 10px;
  }

  .no-results {
    margin-top: 2rem;
    font-size: 1.1rem;
    color: #888;
  }
</style>

<body>
  <div class="container">
    <div class="category-scroll-wrapper">
      <button class="scroll-arrow scroll-left" onclick="scrollCategory(-1)">
        <i class="bi bi-chevron-left"></i>
      </button>

      <div class="category-bar" id="categoryBar">
        <% const icons = {
          all: 'üè†',
          beach: 'üèñ',
          mountain: '‚õ∞',
          cabin: 'üè°',
          desert: 'üèú',
          city: 'üèô',
          lake: 'üèû',
          forest: 'üå≤',
          boat: '‚õµ',
          countryside: 'üåÑ',
          luxe: 'üíé',
          castle: 'üè∞',
          camping: '‚õ∫',
          treehouse: 'üå≥',
          igloo: '‚ùÑ',
          ski: 'üéø',
          windmill: 'üå¨',
          cave: 'üï≥'
        }; %>

        <a href="/listings" class="category-item <%= !category ? 'active' : '' %>">
          <%= icons['all'] %> All
        </a>

        <% categories.forEach(cat => { %>
          <a href="/listings?category=<%= cat %>" class="category-item <%= category === cat ? 'active' : '' %>">
            <%= icons[cat.toLowerCase()] || 'üè∑' %> <%= cat %>
          </a>
        <% }) %>
      </div>

      <button class="scroll-arrow scroll-right" onclick="scrollCategory(1)">
        <i class="bi bi-chevron-right"></i>
      </button>
    </div>

    <!-- Listings -->
    <div class="row">
      <% if (allListings.length === 0) { %>
        <div class="col-12 text-center">
          <p class="no-results">No listings found for your search.</p>
        </div>
      <% } else { %>
        <% allListings.forEach(listing => { %>
          <div class="col-md-6 col-lg-4 mb-4 d-flex">
            <div class="card flex-fill listing-card shadow-sm">
              <a href="/listings/<%= listing._id %>">
                <img class="card-img-top" src="<%= listing.image.url %>" alt="Listing Image">
              </a>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text text-muted flex-grow-1"><b>Price:</b>&nbsp;‚Çπ<%= listing.price %>/night</p>
                <% if (listing.category) { %>
                  <p class="mb-1"><strong>üè∑ Category:</strong> <%= listing.category %></p>
                <% } %>
                <a href="/listings/<%= listing._id %>" class="btn btn-view mt-3 align-self-start">View Listing</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <script>
    function scrollCategory(direction) {
      const container = document.getElementById("categoryBar");
      const scrollAmount = 300;
      container.scrollLeft += direction * scrollAmount;
    }
  </script>
</body>